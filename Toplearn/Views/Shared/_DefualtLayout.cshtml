<!DOCTYPE html>
<html class="no-js" dir="rtl" lang="fa-IR">
<head>
	<title> تاپ لرن | @ViewData["Title"]</title>
	<partial name="Layouts/_MetaTags" />
	<partial name="Layouts/_Styles" />

	<script src="/js/jquery.min.js"></script>
</head>
<body>
	<script src="/js/modernizr-custom.js"></script>
	<script src="/js/jquery.validate.min.js"></script>
	<script src="/js/jquery.validate.unobtrusive.min.js"></script>
	<!-- /header -->
	<div class="landing-layer">
		<div class="container">
			<nav>
				<div class="row">
					<div class="col-sm-6 col-xs-12">
						<ul>
							<li>
								<a href=""> همکاری در فروش </a>
								<a href=""> درباره ما </a>
								<a href=""> تماس با ما </a>
							</li>
						</ul>
					</div>
					<div class="col-sm-6 col-xs-12">
						<div class="clientarea">
							@if(User.Identity.IsAuthenticated){
							<div class="loggein ">
								<i class="zmdi zmdi-account"></i><a href="/UserPanel/@(User.Identity.Name)"> @(User.Identity.Name) ، خوش آمدی </a>
							</div>
							}
							else{
							<div class="signin">
								<i class="zmdi zmdi-account"></i>
								<a href="/Login"> ورود </a> /
									<a href="/Register"> عضویت </a>
							</div>
							}

						</div>
					</div>
				</div>
			</nav>
			@RenderSection("SearchBox",false)
		</div>
	</div>

	@await Component.InvokeAsync("GroupsCourseComponent")

	<!-- /content -->
	@RenderBody()

	<!-- footer -->
	<partial name="Layouts/_Footer" />


	<partial name="Layouts/_ValidationScriptsPartial" />
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/script.js"></script>

	@RenderSection("Scripts",false)
</body>
</html>
