@model Toplearn.Core.DTOs.UserVM.EmailOnlyViewModel
@{
    ViewData["Title"] = "فراموشی رمز عبور";
}

@if (ViewData["ResetPasswordEmailSend"] != null && (bool)ViewData["ResetPasswordEmailSend"]==true){
    <partial name="Partials/_ResetPasswordEmailSend" model="Model"/>
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">تاپ لرن</a></li>
            <li class="breadcrumb-item"><a href="/Login">ورود</a></li>
            <li class="breadcrumb-item active" aria-current="page">فراموشی رمز عبور</li>
        </ul>
    </nav>
</div>

<main class="client-page">
    <div class="container-content">

        <header><h2> ارسال ایمیل تغییر رمز عبور </h2></header>

        <div class="form-layer">

            <form action="ForgotPassword" method="post">

                <div class="input-group">
                    <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-email"></i></span>
                    <input type="email" asp-for="Email" class="form-control" placeholder="ایمیل" aria-describedby="email-address">
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>

                <div class="link">
                    <a href="/Login"> <i class="zmdi zmdi-lock"></i> ورود</a>
                    <a href="/Register"> <i class="zmdi zmdi-account"></i> عضویت در سایت </a>
                </div>
                <button class="btn btn-success"> ارسال ایمیل </button>
            </form>
        </div>
    </div>
</main>