@model Toplearn.Core.DTOs.UserVM.ChangePasswordViewModel
@{
	ViewData["Title"] = "تغییر رمز عبور";
}

@if (ViewData["ResetPasswordSucceed"] != null && (bool)ViewData["ResetPasswordSucceed"] == true)
{
	<partial name="Partials/_ChangePasswordSucceedPartial" />
	<script>
		$(document).ready(function () {
			setTimeout(function () { location.replace("/UserPanel"); }, 10000);
		});
	</script>
}

<div class="container">
	<nav aria-label="breadcrumb">
		<ul class="breadcrumb">
			<li class="breadcrumb-item"><a href="/">تاپ لرن</a></li>
			<li class="breadcrumb-item"><a href="/UserPanel">پنل کاربری</a></li>
			<li class="breadcrumb-item active" aria-current="page">تغییر رمز عبور</li>
		</ul>
	</nav>
</div>

<main class="client-page">
	<div class="container-content">

		<header><h2> تغییر رمز عبور حساب کاربری </h2></header>

		<div class="form-layer">

			<form action="ChangePassword" method="post">

				<input type="hidden" asp-for="UserId" class="form-control" aria-describedby="userId">

				<div class="input-group">
					<span class="input-group-addon" id="email-address"><i class="zmdi zmdi-lock"></i></span>
					<input type="password" asp-for="OldPassword" class="form-control" placeholder="رمز عبور فعلی" aria-describedby="password">
				</div>
				<span asp-validation-for="OldPassword" class="text-danger"></span>

				<div class="input-group">
					<span class="input-group-addon" id="email-address"><i class="zmdi zmdi-lock-outline"></i></span>
					<input type="password" asp-for="Password" class="form-control" placeholder="رمز عبور جدید" aria-describedby="password">
				</div>
				<span asp-validation-for="Password" class="text-danger"></span>

				<div class="input-group">
					<span class="input-group-addon" id="password"><i class="zmdi zmdi-lock-outline"></i></span>
					<input type="password" asp-for="RePassword" class="form-control" placeholder="تکرار رمز عبور جدید" aria-describedby="password">

				</div>
				<span asp-validation-for="RePassword" class="text-danger"></span>

				<div class="input-group">
					<button class="btn btn-success">ثبت تغییرات</button>
				</div>


			</form>
		</div>

	</div>
</main>